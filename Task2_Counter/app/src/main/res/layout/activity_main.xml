<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contador"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="96dp"
        android:layout_height="101dp"
        android:backgroundTint="#C6C6C6"
        android:text="@string/bMinus"
        android:textColor="#546E7A"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="209dp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="106dp"
        android:layout_height="95dp"
        android:backgroundTint="#C8C8C8"
        android:text="@string/bPlus"
        android:textColor="#546E7A"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="209dp" />

    <ToggleButton
        android:id="@+id/tbOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#455A64"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="326dp" />

    <EditText
        android:id="@+id/editTextNumberSigned2"
        android:layout_width="74dp"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="numberSigned"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="472dp"
        android:autofillHints="" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:textColor="#5E35B1"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="472dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="164dp"
        android:layout_height="47dp"
        android:text="@string/contoneo_negativo"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="472dp" />

    <TextView
        android:id="@+id/tvFinalCount"
        android:layout_width="98dp"
        android:layout_height="82dp"
        android:text="@string/tvCounter"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="65dp" />

</androidx.constraintlayout.widget.ConstraintLayout>